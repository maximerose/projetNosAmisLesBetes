{% extends 'base.html.twig' %}

{% block title 'Page non trouvée' %}

{% block stylesheets %}
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,400,700" rel="stylesheet">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="/colorlib-error-404-4/css/style.css"/>
{% endblock %}

{% block body %}
    <div id="notfound">
        <div class="notfound">
            <div class="notfound-404">
                <h1>Oops!</h1>
                <h2>404 - La page demandée n'a pas été trouvée</h2>
            </div>
            <a href="{{ path('index') }}">Retourner à l'accueil</a>
        </div>
    </div>
{% endblock %}

