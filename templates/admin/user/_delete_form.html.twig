<form method="post" action="{{ path('admin_user_delete', {id: user.id}) }}"
      onsubmit="return confirm('Voulez-vous vraiment supprimer ce compte?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    {% if table %}
        <button class="btn btn-link text-danger"><i class="fas fa-trash-alt"></i></button>
    {% else %}
        <button class="btn btn-danger">{{ button_label|default('Supprimer') }}</button>
    {% endif %}
</form>
