{% extends 'admin/base.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block admin %}
    <h1>Animal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for animal in animals %}
                <tr>
                    <td>{{ animal.id }}</td>
                    <td>{{ animal.nom }}</td>
                    <td>{{ animal.age }}</td>
                    <td>
                        <a href="{{ path('admin_animal_show', {'id': animal.id}) }}">show</a>
                        <a href="{{ path('admin_animal_edit', {'id': animal.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_animal_new') }}">Create new</a>
{% endblock %}
