<form method="post" action="{{ path('admin_personne_delete', {id: personne.id}) }}"
      onsubmit="return confirm('Voulez-vous vraiment supprimer cette personne?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personne.id) }}">
    {% if table %}
        <button class="btn btn-link text-danger"><i class="fas fa-trash-alt"></i></button>
    {% else %}
        <button class="btn btn-danger">{{ button_label|default('Supprimer') }}</button>
    {% endif %}
</form>
