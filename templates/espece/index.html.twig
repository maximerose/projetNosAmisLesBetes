{% extends 'base.html.twig' %}

{% block title 'Toutes les espèces' %}

{% block body %}
    <div class="container-fluid">
        <h1>Toutes les espèces</h1>
        <div class="row">
            {% for espece in especes %}
                <div class="col-6 col-md-4 col-lg-3 my-2">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ espece.nom }}</h5>
                            <p class="card-text">{{ espece.animaux | length }} animaux</p>
                            <a href="{{ path('espece_show', {id: espece.id}) }}" class="btn btn-primary">
                                Voir l'espèce
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row d-flex justify-content-center">
            <div class="pagination">
                {{ knp_pagination_render(especes) }}
            </div>
        </div>
    </div>
{% endblock %}
