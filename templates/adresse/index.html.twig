{% extends 'base.html.twig' %}

{% block title 'Toutes les adresses' %}

{% block body %}
    <div class="container-fluid">
        <h1>Toutes les adresses</h1>
        {% include '/search_forms/_form_adresse.html.twig' %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">IntitulÃ©</th>
                        <th scope="col">Habitants</th>
                    </tr>
                </thead>
                <tbody>
                    {% for adresse in adresses %}
                        <tr>
                            <td><a href="{{ path('adresse_show', {id: adresse.id}) }}">{{ adresse.intitule }}</a></td>
                            <td>
                                <ul class="list-unstyled mb-0">
                                    {% for personne in adresse.personnes %}
                                        <li>
                                            <a href="{{ path('personne_show', {id: personne.id}) }}">{{ personne.nom }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="pagination">
                {{ knp_pagination_render(adresses) }}
            </div>
        </div>
    </div>
{% endblock %}
